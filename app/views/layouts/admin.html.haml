!!! 5
%html
  %head
    %title Lpl
    = stylesheet_link_tag    "admin", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body.admin
    %header
      .navbar.navbar-inverse
        .navbar-inner
          .container
            .brand Administración
            %ul.nav
              %li{class: (@current_controller == 'posts' ? "dropdown active" : "dropdown")}
                %a.dropdown-toggle{data: {toggle: "dropdown"}}
                  Posts
                  %b.caret
                %ul.dropdown-menu
                  %li
                    =link_to "Lista", posts_path
                  %li
                    =link_to "Nuevo", new_post_path
              %li{class: (current_page?(manage_calendars_path) ? "active" : nil)}
                %a.dropdown-toggle{data: {toggle: "dropdown"}}
                  Calendar
                  %b.caret
                %ul.dropdown-menu
                  %li
                    =link_to "Eventos", manage_calendars_path
                  %li
                    =link_to "Nuevo Dia", new_manage_calendar_path
              %li{class: (@current_controller == 'manage_admins' ? "dropdown active" : "dropdown")}
                %a.dropdown-toggle{data: {toggle: "dropdown"}}
                  Admins
                  %b.caret
                %ul.dropdown-menu
                  %li
                    =link_to "Lista de admins", admins_list_path
              %li{class: "dropdown"}
                %a.dropdown-toggle{data: {toggle: "dropdown"}}
                  = current_admin.email
                  %b.caret
                %ul.dropdown-menu
                  %li
                    =link_to "Cambiar contraseña", edit_admin_password_path
                  %li
                    = link_to('Logout', destroy_admin_session_path, :method => :delete)
    .container
      .row-fluid
        .span12
          = yield
