!!! 5
%html
  %head
    %title Las Palmas LAN 2012
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    <meta name="google-site-verification" content="_rU5LQyvI3emLQxMTxIqjf3zs998kmHDp-IAfduun3U" />
  %body
    .container
      %header
        #banner
          #logo.well
        %ul.nav.pull-left
          %li
            .link
              =link_to "Home", root_path, class: ((@current_controller == 'static_pages' and @current_action == 'dashboard') ? "active" : "")
          %li
            .link
              =link_to "Noticias", blog_path, class: (@current_controller == 'blog' ? "active" : "")
          %li
            .link
              =link_to "Calendario", calendar_path, class: (@current_controller == 'calendar' ? "active" : "")
          %li
            .link
              =link_to "Torneos", competitions_path, class: (@current_controller == 'competitions' ? "active" : "")

      -if flash[:notice].present?
        .alert.alert-success
          = flash[:notice]
      -if flash[:error].present?
        .alert.alert-error
          = flash[:error] 
      = yield
