= simple_form_for @post, html:{class: "custom-form"} do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  = f.input :title
  = f.input :intro, :as => :ckeditor, :input_html => { :toolbar => 'Full' }
  = f.input :content, :as => :ckeditor, :input_html => { :toolbar => 'Full' }
  .actions
    = f.submit 'Save', class: "btn-blue"
