%h1
  .title  
    CALENDAR
%ul.row-fluid.mycalendar
  - @days.each do |day|
    = day.day_date
    %li.span6
      - if day.events.present?
        - day.events.each do |event|
          .span2
            = event.event_time
          .span8
            = event.description
          .span2
            = link_to manage_calendar_edit_path, class: "btn btn-small" do
              %i.icon-plus
              Update Day  

.span2.offset5
  = link_to manage_calendar_new_path, class: "btn btn-large" do
    %i.icon-plus
    New Day
