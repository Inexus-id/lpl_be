%section.main.row
  = simple_form_for(@enrollment) do |f|
    = f.error_notification

    .form-inputs
      .full-name
        .span6
          = f.input :first_name, label: "Nombre", input_html: { class: 'span6' }
        .span6
          = f.input :last_name, label: "Apellidos", input_html: { class: 'span6' }
      .personal-id
        .span3
          = f.input :dni_n, label: "Numeración del DNI", input_html: { class: 'span3' }
        .span3
          = f.input :dni_l, label: "Letra del DNI", input_html: { class: 'span1' }
      .birt
        .span12
          = f.input :birt, label: "Fecha de nacimiento", input_html: { class: 'span2' }
      .pc_games
        .span12
          .description Puedes seleccionar 2 competiciones de ordenador como máximo:
          = f.collection_check_boxes :pc_tournamens, Tournament.where(pc: true), :id, :game
      .video_games
        .span12
          .description Puedes seleccionar 2 competiciones de ordenador como máximo:
          .checkboxes
          = f.collection_check_boxes :video_game_tournamens, Tournament.where(pc: false), :id, :game
      .email
        .span12
          = f.input :email, label: "Email de contacto"
      .extra
        .span6
          = f.input :nick
        .span6
          = f.input :add_clan, label: "Si quieres sentarte con tus amigos, pon aquí el nombre de tu equipo, asegúrate que todos ponen el mismo exactamente."
        .span12
          = f.input :hardware, label: "Dispositivos electrónicos (torre, portatil, consola, ...)", input_html: { class: 'span12' }

    .form-actions.span12
      = f.button :submit, "Realizar inscripción"
